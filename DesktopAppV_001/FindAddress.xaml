<Window x:Class="DesktopAppV_001.FindAddress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopAppV_001"
        mc:Ignorable="d"
        Title="FindAddress" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="197*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btn_find_ipp" Content="Find External Ip Address" HorizontalAlignment="Center" Height="91" Margin="0,70,0,0" VerticalAlignment="Top" Width="448" Click="btn_find_ipp_Click" Grid.Column="1"/>
        <TextBox x:Name="tb_ext_ip" HorizontalAlignment="Left" Height="68" Margin="100,228,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="576" FontSize="48" FontWeight="Bold" TextAlignment="Center" Grid.Column="1"/>
        <Button x:Name="btn_back" Content="Back" HorizontalAlignment="Center" Height="44" Margin="0,370,0,0" VerticalAlignment="Top" Width="260" Click="btn_back_Click" Grid.Column="1"/>

    </Grid>
</Window>
